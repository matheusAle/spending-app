{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "rootDir": "",
    "baseUrl": "./",
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/**/*"]
  },
  "exclude": [
    "__mocks__",
    "__tests__",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
